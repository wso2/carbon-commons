<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>reporting-features</artifactId>
        <version>4.3.0-SNAPSHOT</version>
	<relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.reporting.feature</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Reporting Feature</name>
    <version>4.3.0-SNAPSHOT</version>
    <url>http://wso2.org</url>
    <description>This feature contains the bundles required for Reporting</description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.reporting.server.feature</artifactId>
            <version>4.3.0-SNAPSHOT</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.reporting.template.server.feature</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.reporting.ui.feature</artifactId>
            <version>${carbon.platform.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.reporting.template.ui.feature</artifactId>
            <version>${carbon.platform.version}</version>
            <type>zip</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.reporting</id>
                            <propertiesFile>../../../etc/feature.properties</propertiesFile>
                            <importFeatures>
                                <importFeatureDef>org.wso2.carbon.core:${project.version}</importFeatureDef>
                            </importFeatures>
                            <includedFeatures>
                                <includedFeatureDef>org.wso2.carbon:org.wso2.carbon.reporting.server.feature:4.3.0-SNAPSHOT</includedFeatureDef>
                                <includedFeatureDef>org.wso2.carbon:org.wso2.carbon.reporting.template.server.feature:${project.version}
                                </includedFeatureDef>
                                <includedFeatureDef>org.wso2.carbon:org.wso2.carbon.reporting.ui.feature:${carbon.platform.version}
                                </includedFeatureDef>
                                <includedFeatureDef>org.wso2.carbon:org.wso2.carbon.reporting.template.ui.feature:${carbon.platform.version}
                                </includedFeatureDef>
                            </includedFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

     <properties>
    </properties>

</project>
