<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
		<groupId>org.wso2.carbon.commons</groupId>
		<artifactId>data-bridge-feature</artifactId>
        <version>4.4.2</version>
		<relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.databridge.receiver.thrift.server.feature</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Data Bridge - Thrift Reciever Server Feature</name>
	<url>http://wso2.org</url>
    <description>
        This feature contains the bundles required for the thrift receiver of the data bridge
    </description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon.commons</groupId>
            <artifactId>org.wso2.carbon.databridge.receiver.thrift</artifactId>
        </dependency>
    </dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.wso2.maven</groupId>
				<artifactId>carbon-p2-plugin</artifactId>
				<version>${carbon.p2.plugin.version}</version>
				<executions>
					<execution>
						<id>p2-feature-generation</id>
						<phase>package</phase>
						<goals>
							<goal>p2-feature-gen</goal>
						</goals>
						<configuration>
                            <id>org.wso2.carbon.databridge.receiver.thrift.server</id>
							<propertiesFile>../../../etc/feature.properties</propertiesFile>
							<adviceFile>
								<properties>
									<propertyDef>org.wso2.carbon.p2.category.type:server</propertyDef>
									<propertyDef>org.eclipse.equinox.p2.type.group:false</propertyDef>
								</properties>
							</adviceFile>
							<bundles>
                                <bundleDef>org.wso2.carbon.commons:org.wso2.carbon.databridge.receiver.thrift</bundleDef>
							</bundles>

							<importFeatures>
							    <importFeatureDef>org.wso2.carbon.core.server:${carbon.kernel.version}</importFeatureDef>
                                <importFeatureDef>org.wso2.carbon.databridge.core.server</importFeatureDef>
                                <importFeatureDef>org.wso2.carbon.databridge.commons.server</importFeatureDef>
                                <importFeatureDef>org.wso2.carbon.databridge.commons.thrift.server</importFeatureDef>
							</importFeatures>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


    <properties>
    </properties>

</project>
