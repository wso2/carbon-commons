<serviceGroup>
    <service name="IdentityProviderMgtService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="true">
            org.wso2.carbon.idp.mgt.IdentityProviderMgtService
        </parameter>
        <parameter name="adminService" locked="true">true</parameter>
        <parameter name="AuthorizationAction" locked="true">/permission/admin</parameter>
        <parameter name="hiddenService" locked="true">true</parameter>
    </service>
    <service name="IdentityProviderService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="true">
            org.wso2.carbon.idp.mgt.IdentityProviderService
        </parameter>
        <parameter name="adminService" locked="true">false</parameter>
        <parameter name="hiddenService" locked="true">false</parameter>
    </service>
</serviceGroup>
