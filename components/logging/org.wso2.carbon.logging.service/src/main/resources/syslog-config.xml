<!--
    This is the configuration file for Stratos specific constants.
-->

<syslogConfig xmlns="http://wso2.org/projects/carbon/carbon.xml">
    <isSyslogOn>false</isSyslogOn>
    <!--Set the syslog-ng host url which specifies the host which logs are hosted-->
    <syslogHost>http://127.0.0.1/logs/</syslogHost>
    <port>80</port>
    <realm>Stratos</realm>
    <userName>carbon</userName>
    <password>carbon</password>
     <!--Set the syslog-ng log pattern set the tenant specific log pattern-->
     <logPattern>TID: [%T]  [%S] </logPattern>

</syslogConfig>
