<serviceGroup>
    <service name="LoggingAdmin" scope="transportsession">
        <schema schemaNamespace="http://org.apache.axis2/xsd" elementFormDefaultQualified="true"/>
        <transports>
            <transport>https</transport>
        </transports>
        <description>
            This service is used for configuring the logging
        </description>
        <parameter name="ServiceClass">org.wso2.carbon.logging.service.LoggingAdmin</parameter>
        <parameter name="AuthorizationAction" locked="true">/permission/protected/configure/logging</parameter>
        <parameter name="enableMTOM" locked="false">true</parameter>
    </service>

    <service name="LogViewer" scope="transportsession">
        <schema schemaNamespace="http://org.apache.axis2/xsd" elementFormDefaultQualified="true"/>
        <transports>
            <transport>https</transport>
        </transports>
        <description>
            This service is used for viewing log messages
        </description>
        <parameter name="ServiceClass">org.wso2.carbon.logging.service.LogViewer</parameter>
     <parameter name="AuthorizationAction" locked="true">/permission/admin/monitor/logging</parameter> 
    </service>
<!--     <parameter name="AuthorizationAction" locked="true">/permission/admin/</parameter> -->
    <parameter name="adminService" locked="true">true</parameter>
    <parameter name="hiddenService" locked="true">true</parameter>
    <!--  parameter name="superTenantService" locked="true">true</parameter-->
</serviceGroup>
