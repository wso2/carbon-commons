                                <java classname="org.apache.axis2.wsdl.WSDL2Java" fork="true">
                                    <arg line="-uri src/main/resources/RemoteAuthorizationManagerService.wsdl -u -uw -p org.wso2.carbon.um.ws.api.stub -o target/generated-code
